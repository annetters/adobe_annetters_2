{{#if this.isHomepage}}

    <section class="channel-view-component">
        <div class="wrap">
            <h2 class="channel-view-title">More to discover</h2>
            <div class="channel-view-grid">
            {{#each site.categories as |sc|}}
            <div class="channel-card">
                <div class="channel-card-content">
                    <div class="row">
                        <div class="icon-container">
                            <div class="placeholder">&nbsp;</div>
                            <span>{{sc.uploaded_logo}}</span> 
                            <span>
                            {{#each sc.uploaded_logo}}
                                {{this.id}}
                            {{/each}} 
                            </span> 
                            {{log sc.uploaded_logo}}
                            {{log sc.uploaded_logo.url}}
                        </div>
                        <div class="text-container">
                            <h5 class="title"><a href={{sc.topic_url}}>{{sc.slug}}</a></h5>
                            <span class="stats">117.k conversations</span>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
  </section>
{{/if}}